# ===========================================
# ELYON PVP - Backend Configuration
# ===========================================
# Zkopíruj tento soubor jako .env a vyplň hodnoty

# Server
PORT=3001
SESSION_SECRET=your-super-secret-session-key-change-this

# Frontend URL (pro CORS a redirecty)
FRONTEND_URL=http://localhost:8080

# MySQL Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_NAME=elyon_pvp

# Discord OAuth (https://discord.com/developers/applications)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_CALLBACK_URL=http://localhost:3001/api/auth/discord/callback

# Discord Bot Token (pro odesílání zpráv)
DISCORD_BOT_TOKEN=your-discord-bot-token

# Discord Webhook URL (pro novinky)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx

# Discord Server & Role IDs
DISCORD_GUILD_ID=your-discord-server-id
DISCORD_ADMIN_ROLE_ID=your-admin-role-id
